{
  "_id" : "_design/attachments",
  "language" : "javascript",
  "views" : {
     "all" : {
       "map" : """function(doc) {
           var k;
           if (doc._attachments) { 
             for (k in doc._attachments) {
               emit([doc._id, k], doc._attachments[k].length);
             }
           }
           if (doc.external_docs) { 
             for (k in doc.external_docs) {
               emit([doc._id, k], doc.external_docs[k].size);
             }
           }
        }""",
        "reduce" : "_stats"
     }
  }
}
